dvc_local_cache_path_ref() {
    if [ $# -ne 1 ]; then
        echo "Usage: dvc_local_cache_path_ref <ref>:<path>" >&2
        return 1
    fi
    local ref="${1%:*}"
    local path="${1#*:}"
    if [ "$ref" == "$path" ]; then
        ref="HEAD"
    fi
    path="${path%.dvc}.dvc"
    path="$(git relpath "$path")"
    git show "$ref:$path" | dvc_local_cache_path
}
export -f dvc_local_cache_path_ref
defn dvlpr dvc_local_cache_path_ref
