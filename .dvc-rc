dvc_list_category() {
    if [ $# -eq 0 ]; then
        echo "Usage: dvc_list_category <unchanged|uncommitted.modified|uncommitted.deleted|...> [patterns...]" >&2
        return 1
    fi
    category="$1"; shift
    relpath="$(dvc_relpath)"
    dvc data status --unchanged --json | \
    jq -r "(.$category // [])[]" | \
    grep "^$relpath" | \
    sed "s|^$relpath||" | \
    sort | \
    if [ $# -gt 0 ]; then
        while read -r line; do
            for pattern in "$@"; do
                if [[ $line == $pattern ]]; then
                    echo "$line"
                    break
                fi
            done
        done
    else
        cat
    fi
}
export -f dvc_list_category
