dvc_size() {
    if [ $# -eq 0 ]; then
        yq '.outs | map(.size)[] | add'
    elif [ $# -eq 1 ] ; then
        yq '.outs | map(.size) | add' "$1"
    else
        for path in "$@"; do
            dvc_size "$path"
        done | jq -n '[ inputs ] | add'
    fi
}
